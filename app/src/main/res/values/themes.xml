<resources>
    <!-- Modern Material Design Theme -->
    <style name="Theme.rabbit" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryVariant</item>
        <item name="colorAccent">@color/colorSecondary</item>
        
        <!-- Material Design 3 Colors -->
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnPrimary">@color/textColorOnPrimary</item>
        <item name="colorOnSecondary">@color/textColorOnPrimary</item>
        
        <!-- Background colors -->
        <item name="android:windowBackground">@color/background</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/textColor</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/textColor</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/textColor</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:textColorHint">@color/hintTextColor</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Action bar/Toolbar -->
        <item name="actionBarStyle">@style/ModernActionBar</item>
        
        <!-- Window features -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        
        <!-- Button style -->
        <item name="buttonStyle">@style/ModernButton</item>
        <item name="materialButtonStyle">@style/ModernMaterialButton</item>
        
        <!-- EditText style -->
        <item name="editTextStyle">@style/ModernEditText</item>
        
        <!-- Material Design Components -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <item name="materialCardViewStyle">@style/Widget.MaterialComponents.CardView</item>
    </style>

    <!-- Modern Action Bar Style -->
    <style name="ModernActionBar" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="background">@color/colorPrimary</item>
        <item name="titleTextStyle">@style/ModernActionBarTitle</item>
        <item name="elevation">4dp</item>
    </style>

    <!-- Modern Action Bar Title -->
    <style name="ModernActionBarTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/textColorOnPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Modern Button Style -->
    <style name="ModernButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/modern_button_background</item>
        <item name="android:textColor">@color/textColorOnPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:elevation">2dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Modern Material Button Style -->
    <style name="ModernMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/textColorOnPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Modern EditText Style -->
    <style name="ModernEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:background">@drawable/modern_edittext_background</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/hintTextColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:padding">16dp</item>
        <item name="android:minHeight">56dp</item>
    </style>

    <!-- Modern Card Style -->
    <style name="ModernCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorCard</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardMaxElevation">6dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <!-- Modern Text Styles -->
    <style name="ModernHeadline" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="ModernTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="ModernSubtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="ModernBody" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="ModernCaption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Logout Button Style -->
    <style name="LogoutButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorError</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:padding">12dp</item>
        <item name="cornerRadius">18dp</item>
        <item name="strokeColor">#B71C1C</item>
        <item name="strokeWidth">1dp</item>
    </style>

</resources>